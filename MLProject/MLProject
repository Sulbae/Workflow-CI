name: workflow-CI

conda_env: conda.yaml

entry_points:
    modelling:
        parameters:
            n_estimators: {type: int, default: 100}
            max_depth: {type: int, default: 5}
            dataset: {type: string, default: "water_potability_preprocessing.csv"}
        command: >
            python modelling.py
                --n_estimators {n_estimators}
                --max_depth {max_depth}
                --dataset {dataset}